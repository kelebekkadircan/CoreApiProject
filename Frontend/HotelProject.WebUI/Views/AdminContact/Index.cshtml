@model List<ResultContactDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<link href="css/style.css" rel="stylesheet">


                    <div class="email-left-box">
                        <a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                @* @await Html.PartialAsync("SideBarAdminContactPartial") *@
    <div class="mail-list mt-4">
        <a href="/AdminContact/Index" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen</b> <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.a</span> </a>
        <a href="/AdminContact/SendBox" class="list-group-item border-0 p-r-0 text-success "><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden <span class="badge badge-success text-white badge-sm float-right m-t-5">@ViewBag.b</span></a>
        <a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-star-o font-18 align-middle mr-2"></i>Önemli <span class="badge badge-danger badge-sm float-right m-t-5">47</span> </a>
        <a href="#" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslaklar</a>
        <a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu</a>
    </div>
                        <h5 class="mt-5 m-b-10">Kategoriler</h5>
                @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
                    </div>
                    <div class="email-right-box">
                        <div role="toolbar" class="toolbar">
                            <div class="btn-group">
                                <button aria-expanded="false" class="btn btn-dark  type="button">
                            Gelen Mesajlar <span class="caret m-l-5"></span>
                                </button>
                               
                            </div>
                        </div>
                        <div class="email-list m-t-15">
                            @foreach(var item in Model)
                            {
                        
                                    <div class="message">
                <a href="/AdminContact/MessageDetails/@item.ContactID">
                                            <div class="col-mail col-mail-1">
                                                <div class="email-checkbox">
                                                    <input type="checkbox" id="chk2">
                                                    <label class="toggle" for="chk2"></label>
                                                </div><span class="star-toggle ti-star"></span>
                                            </div>
                                            <div class="col-mail col-mail-2">
                        <div class="subject"><b class="mr-2">Konu : @item.Subject </b> Alıcı : @item.Name </div>
                        <div class="date">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</div>

                                            </div>
                                        </a>
                                    </div>
                            }
                        
                        </div>
                       
            </div>
        
