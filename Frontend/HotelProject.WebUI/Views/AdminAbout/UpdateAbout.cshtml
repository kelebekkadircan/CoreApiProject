@model UpdateAboutDto



@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<form method="post">
    <input type="hidden" asp-for="AboutID" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>İçerik</label>
    <input type="text" asp-for="Content" class="form-control" /> <br />
    <label>Oda Sayısı</label>
    <input type="int" asp-for="RoomCount" class="form-control" /> <br />
    <label>Personel Sayısı</label>
    <input type="int" asp-for="StaffCount" class="form-control" /> <br />
    <label>Müşteri Sayısı</label>
    <input type="int" asp-for="CustomerCount" class="form-control" />
    <br />
    <button type="submit" class="btn btn-outline-success"> About Kısmını Güncelle</button>
</form>


