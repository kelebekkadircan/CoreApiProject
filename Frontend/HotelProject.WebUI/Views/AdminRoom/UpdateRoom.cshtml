@model UpdateRoomDto

@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<form method="post">
    <input type="hidden" asp-for="RoomID" />
    <br />
    <br />
    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Fiyatı</label>
    <input type="int" asp-for="RoomPrice" class="form-control" /> <br />
    <label>Banyo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" /> <br />
    <label>Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" /> <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Resim Link</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control" />
    <br />
    <button type="submit" class="btn btn-outline-success"> Oda Güncelle</button>
</form>

