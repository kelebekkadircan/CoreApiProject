@model List<BookingApiLocationSearchViewModel>

@{
    Layout = null;
    int count = 0;

}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    @using(Html.BeginForm("Index", "SearchLocationId", FormMethod.Post))
        {
            <label>Lokasyon Giriniz</label>
            <input type="text" class="form-control" name="cityName" />
            <br />
            <button class="btn btn-primary" >
                Şehir için ID bul
            </button>
        }
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Lokasyon</th>
          

        </tr>
         @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@item.dest_id</th>
                
            </tr>

        }     </table>
        <br />
    <a class="btn btn-outline-success" href="/BookingByCity/Index">
        Rezervasyon Yaptır</a>
            

</div>
